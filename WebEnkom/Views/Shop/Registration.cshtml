@using WebEnkom.Domain.Entity
@using WebEnkom.HtmlHelpers
@model List<Sex>


<h1>Регистрация</h1>
<form asp-controller="Shop" asp-action="Registration" method="post">
    <table>
        <tr>
            <td>Телефон - </td>
            <td><input name="Tel"/></td>
        </tr>
        <tr>
            <td>Пароль - </td>
            <td><input type="password" name="Password"/></td>
        </tr>
        <tr>
            <td>Фамилия - </td>
            <td><input name="Surname"/></td>
        </tr>
        <tr>
            <td>Name - </td>
            <td><input name="Name"/></td>
        </tr>
        <tr>
            <td>Fathername - </td>
            <td><input name="Fathername"/></td>
        </tr>
        <tr>
            <td>Пол - </td>
            <td>
                <select name="Sex">
                    @Html.CreateList(Model)
                </select>
            </td>
        </tr>
    </table>
    <input type="submit" value="Зарегистрировать"/>
</form>
